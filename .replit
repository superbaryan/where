modules = ["nodejs-20", "bun-1.2"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["watchman"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo Web App"

[[workflows.workflow]]
name = "Expo Web App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd where && bunx expo start --web --port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 44745
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bunx", "expo", "start", "--web", "--port", "5000", "--no-dev", "--minify"]
build = ["bun", "run", "--cwd", "where", "tailwindcss", "-o", "where/global.css"]
