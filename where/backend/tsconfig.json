{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",                
    "paths": {
      "@/*": ["*"]                 
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
