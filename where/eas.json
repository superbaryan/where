{
  "build": {
    "production": {
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote"  // Let Expo manage credentials
      },
      "env": {
        "APP_ENV": "production"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "debug"
      }
    }
  },
  "cli": {
    "version": ">= 5.0.0",
    "requireCommit": true,
    "appVersionSource": "remote"
  }
}
