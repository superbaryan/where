{
  "build": {
    "production": {
      "android": {
        "buildType": "apk",
        "credentialsSource": "remote"
      },
      "env": {
        "APP_ENV": "production",
        "BUN_INSTALL_ARGS": "--no-save"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "BUN_INSTALL_ARGS": "--no-save"
      }
    },
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "BUN_INSTALL_ARGS": "--no-save"
      }
    }
  },
  "cli": {
    "version": ">= 5.0.0",
    "requireCommit": true,
    "appVersionSource": "remote"
  }
}
